# Gong API credentials
# Note: Gong uses tenant-specific URLs (e.g., https://us-79647.api.gong.io)
# Both access key and secret key are required for Basic Auth
GONG_API_KEY=your_gong_access_key_here
GONG_API_SECRET=your_gong_secret_key_here
GONG_WEBHOOK_SECRET=your_webhook_secret_here
GONG_API_BASE_URL=https://us-79647.api.gong.io/v2

# Claude API
ANTHROPIC_API_KEY=your_claude_api_key_here

# Database (Neon Postgres)
DATABASE_URL=postgresql://user:pass@ep-xxx.us-east-2.aws.neon.tech/callcoach?sslmode=require
DATABASE_POOL_MIN_SIZE=5
DATABASE_POOL_MAX_SIZE=20

# Analysis settings
ENABLE_CACHING=true
CACHE_TTL_DAYS=90
MAX_CHUNK_SIZE_TOKENS=80000
CHUNK_OVERLAP_PERCENTAGE=20

# Redis (optional - system gracefully degrades to database-only if unavailable)
# Note: Redis is NOT compatible with Vercel serverless. Leave unset for Vercel deployment.
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=
# REDIS_MAX_CONNECTIONS=50

# Prefect/Horizon
PREFECT_API_URL=https://api.prefect.cloud/api/accounts/your-account-id/workspaces/your-workspace-id
PREFECT_API_KEY=your_prefect_api_key_here

# Notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Webhook endpoint (for FastAPI)
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=8000

# MCP Server settings
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=3000

# Logging
LOG_LEVEL=INFO
