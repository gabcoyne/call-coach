{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "generate:types": {
      "cache": true,
      "inputs": ["../openapi.json", "../db/models.py", "../api/**/*.py"],
      "outputs": ["types/generated/**"]
    },
    "type-check": {
      "dependsOn": ["generate:types"],
      "cache": true
    },
    "build": {
      "dependsOn": ["^build", "generate:types"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "test:py": {
      "cache": true,
      "inputs": ["../**/*.py", "../tests/**"],
      "outputs": ["../coverage/**", "../htmlcov/**"]
    },
    "lint:py": {
      "cache": true,
      "inputs": ["../**/*.py"]
    }
  }
}
